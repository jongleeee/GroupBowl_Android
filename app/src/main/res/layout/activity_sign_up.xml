<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.heapstack.groupbowl.SignUpActivity"
    android:background="@color/text_color">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="club management"
        android:id="@+id/subtitle"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/signup_emailField"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="101dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/signup_emailField"
        android:hint="Email"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="192dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white">

        <requestFocus/>

    </EditText>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signup_password"
        android:layout_alignParentStart="true"
        android:hint="Password"
        android:layout_below="@+id/signup_emailField"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_name"
        android:layout_alignParentStart="true"
        android:hint="Your Name"
        android:layout_below="@+id/signup_password"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/signup_phone"
        android:layout_alignParentStart="true"
        android:hint="Phone Number"
        android:layout_below="@+id/signup_name"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signupButton"
        android:background="@android:color/white"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/signup_phone"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/groupbowl_logo_white_big"
        android:layout_alignBottom="@+id/subtitle" />

</RelativeLayout>
